{
  "name": "@vokality/ragdoll",
  "version": "0.1.5",
  "description": "An animated character framework with facial expressions, head poses, themes, and speech bubbles. Built with React and SVG.",
  "type": "module",
  "license": "MIT",
  "author": "Vokality",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vokality/ragdoll.git",
    "directory": "packages/ragdoll"
  },
  "keywords": [
    "ragdoll",
    "character",
    "animation",
    "facial-expressions",
    "react",
    "svg",
    "avatar",
    "themes"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "bun test src/**/*.test.ts"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.5",
    "typescript": "~5.9.3"
  }
}