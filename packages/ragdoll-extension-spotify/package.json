{
  "name": "@vokality/ragdoll-extension-spotify",
  "version": "0.1.0",
  "description": "Spotify playback extension for the Ragdoll framework",
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@vokality/ragdoll-extensions": "workspace:*"
  },
  "devDependencies": {
    "typescript": "~5.9.3"
  },
  "ragdollExtension": {
    "id": "spotify",
    "name": "Spotify",
    "description": "Spotify playback control and search tools",
    "capabilities": ["tools"],
    "requiredCapabilities": ["oauth"],
    "entry": "./dist/index.js",
    "canDisable": true,
    "configSchema": {
      "clientId": {
        "type": "string",
        "label": "Spotify Client ID",
        "description": "Get this from developer.spotify.com/dashboard",
        "required": true,
        "placeholder": "your-spotify-client-id"
      }
    },
    "oauth": {
      "provider": "spotify",
      "authorizationUrl": "https://accounts.spotify.com/authorize",
      "tokenUrl": "https://accounts.spotify.com/api/token",
      "scopes": [
        "streaming",
        "user-read-email",
        "user-read-private",
        "user-read-playback-state",
        "user-modify-playback-state",
        "user-read-currently-playing"
      ],
      "pkce": true
    }
  }
}
