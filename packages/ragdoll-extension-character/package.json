{
  "name": "@vokality/ragdoll-extension-character",
  "version": "0.1.0",
  "description": "Character expression extension for the Ragdoll framework",
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@vokality/ragdoll-extensions": "workspace:*"
  },
  "devDependencies": {
    "typescript": "~5.9.3"
  },
  "ragdollExtension": {
    "id": "character",
    "name": "Character",
    "description": "Facial expressions and animations",
    "capabilities": ["tools", "slots"],
    "requiredCapabilities": ["ipc"],
    "entry": "./dist/index.js",
    "canDisable": false
  }
}
