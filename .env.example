# Ragdoll Configuration
# Copy this file to .env and customize as needed

# API Server Port (default: 3001)
RAGDOLL_API_PORT=3001

# Frontend Dev Server Port (default: 5173)
VITE_PORT=5173

# API URL for frontend to connect to (default: http://localhost:3001)
# Change this if running API on a different port or host
VITE_API_URL=http://localhost:3001

# API URL for MCP server to connect to (default: http://localhost:3001)
# Used by the MCP server when running standalone
RAGDOLL_API_URL=http://localhost:3001
