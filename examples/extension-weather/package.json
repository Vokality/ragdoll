{
  "name": "@example/ragdoll-extension-weather",
  "version": "1.0.0",
  "description": "Example weather extension for Ragdoll - demonstrates how to create extension packages",
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "ragdollExtension": {
    "id": "weather",
    "config": {
      "defaultUnits": "celsius"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@vokality/ragdoll-extensions": "file:../../packages/ragdoll-extensions"
  },
  "devDependencies": {
    "typescript": "~5.9.3"
  }
}
