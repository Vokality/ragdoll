{
  "name": "ragdoll-chat",
  "version": "0.1.0",
  "private": true,
  "description": "Chat with an animated AI character powered by GPT",
  "main": "dist/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run build:electron",
    "build:electron": "tsc -p tsconfig.electron.json && tsc -p tsconfig.preload.json",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently -n VITE,ELECTRON -c cyan,yellow \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.electron.json --noEmit"
  },
  "dependencies": {
    "@vokality/ragdoll": "workspace:*",
    "openai": "^4.73.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.1.2",
    "electron": "^33.0.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "wait-on": "^8.0.0"
  }
}

