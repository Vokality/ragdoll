{
  "name": "lumen",
  "version": "0.1.7",
  "private": true,
  "author": "lemuel@vokality.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vokality/ragdoll"
  },
  "homepage": "https://github.com/vokality/ragdoll/tree/main/apps/chat",
  "bugs": {
    "url": "https://github.com/vokality/ragdoll/issues"
  },
  "keywords": [
    "lumen",
    "ragdoll",
    "chat",
    "ai",
    "assistant",
    "animated",
    "character",
    "gpt"
  ],
  "description": "Lumen is an expressive GPT assistant powered by the Ragdoll framework",
  "main": "dist/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run build:electron",
    "build:electron": "tsc -p tsconfig.electron.json && tsc -p tsconfig.preload.json",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently -n VITE,ELECTRON -c cyan,yellow \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.electron.json --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@vokality/ragdoll": "workspace:*",
    "@vokality/ragdoll-extensions": "workspace:*",
    "@vokality/ragdoll-extension-character": "workspace:*",
    "@vokality/ragdoll-extension-tasks": "workspace:*",
    "@vokality/ragdoll-extension-pomodoro": "workspace:*",
    "node-fetch": "^2",
    "openai": "^4.73.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.1.2",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.7",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "wait-on": "^8.0.0"
  }
}
