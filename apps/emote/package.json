{
  "name": "emote",
  "displayName": "Emote",
  "description": "Give AI the ability to express itself. An animated character controlled via MCP that lets AI assistants show emotions, reactions, and communicate visually.",
  "version": "0.1.0",
  "publisher": "vokality",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/vokality/ragdoll"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "emote",
    "ai",
    "expression",
    "mcp",
    "model-context-protocol",
    "character",
    "animation",
    "ai-assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "emote.show",
        "title": "Emote: Show Character"
      },
      {
        "command": "emote.hide",
        "title": "Emote: Hide Character"
      },
      {
        "command": "emote.toggle",
        "title": "Emote: Toggle Character"
      },
      {
        "command": "emote.setMood",
        "title": "Emote: Set Mood"
      },
      {
        "command": "emote.triggerAction",
        "title": "Emote: Trigger Action"
      },
      {
        "command": "emote.clearAction",
        "title": "Emote: Clear Action"
      },
      {
        "command": "emote.setHeadPose",
        "title": "Emote: Set Head Pose"
      },
      {
        "command": "emote.setSpeechBubble",
        "title": "Emote: Set Speech Bubble"
      },
      {
        "command": "emote.setTheme",
        "title": "Emote: Set Theme"
      },
      {
        "command": "emote.copyMcpConfig",
        "title": "Emote: Copy MCP Configuration"
      }
    ],
    "configuration": {
      "title": "Emote",
      "properties": {
        "emote.theme": {
          "type": "string",
          "default": "default",
          "enum": [
            "default",
            "robot",
            "alien",
            "monochrome"
          ],
          "enumDescriptions": [
            "Warm, human-like appearance",
            "Metallic, futuristic robot",
            "Green, otherworldly alien",
            "Classic black and white"
          ],
          "description": "Character theme"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build:prod",
    "build": "npm run build:extension && npm run build:webview",
    "build:prod": "npm run build:extension:prod && npm run build:webview",
    "build:extension": "node esbuild.config.mjs",
    "build:extension:prod": "node esbuild.config.mjs --production",
    "build:webview": "vite build --config webview/vite.config.ts",
    "watch": "node esbuild.config.mjs --watch",
    "dev": "concurrently -n EXT,WEB -c cyan,yellow \"npm run watch\" \"npm run build:webview\"",
    "package": "vsce package --allow-missing-repository --skip-license --no-dependencies",
    "clean": "rm -rf dist",
    "mcp-server": "node dist/mcp-server.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.85.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.1.2",
    "esbuild": "^0.21.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@vokality/ragdoll": "^0.1.4-a1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}