{
  "name": "emote",
  "displayName": "Emote",
  "description": "Give AI the ability to express itself. An animated character controlled via MCP that lets AI assistants show emotions, reactions, and communicate visually.",
  "version": "0.2.0",
  "publisher": "vokality",
  "preview": true,
  "qna": false,
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#0f172a",
    "theme": "dark"
  },
  "badges": [
    {
      "description": "MCP Ready",
      "url": "https://img.shields.io/badge/MCP-ready-4ec9b0",
      "href": "https://modelcontextprotocol.io"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vokality/ragdoll"
  },
  "homepage": "https://github.com/vokality/ragdoll/tree/main/apps/emote",
  "bugs": {
    "url": "https://github.com/vokality/ragdoll/issues"
  },
  "files": [
    "dist/**/*",
    "media/**/*",
    "icon.png",
    "icon.svg",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "publish.md",
    "mcp-config.example.json"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "emote",
    "ai",
    "expression",
    "mcp",
    "model-context-protocol",
    "character",
    "animation",
    "ai-assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "emote.show",
        "title": "Emote: Show Character",
        "shortTitle": "Show Character",
        "category": "Emote"
      },
      {
        "command": "emote.hide",
        "title": "Emote: Hide Character",
        "shortTitle": "Hide Character",
        "category": "Emote"
      },
      {
        "command": "emote.toggle",
        "title": "Emote: Toggle Character",
        "shortTitle": "Toggle Character",
        "category": "Emote"
      },
      {
        "command": "emote.triggerAction",
        "title": "Emote: Trigger Action",
        "shortTitle": "Trigger Action",
        "category": "Emote"
      },
      {
        "command": "emote.clearAction",
        "title": "Emote: Clear Action",
        "shortTitle": "Clear Action",
        "category": "Emote"
      },
      {
        "command": "emote.setTheme",
        "title": "Emote: Set Theme",
        "shortTitle": "Set Theme",
        "category": "Emote"
      },
      {
        "command": "emote.copyMcpConfig",
        "title": "Emote: Copy MCP Configuration",
        "shortTitle": "Copy MCP Config",
        "category": "Emote"
      }
    ],
    "configuration": {
      "title": "Emote",
      "properties": {
        "emote.theme": {
          "type": "string",
          "default": "default",
          "enum": [
            "default",
            "robot",
            "alien",
            "monochrome"
          ],
          "enumDescriptions": [
            "Warm, human-like appearance",
            "Metallic, futuristic robot",
            "Green, otherworldly alien",
            "Classic black and white"
          ],
          "description": "Character theme",
          "markdownDescription": "Select the default Emote appearance. You can still override it via the `Emote: Set Theme` command or MCP tools."
        }
      }
    }
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "Emote needs to read/write ~/.emote for MCP tooling."
    },
    "virtualWorkspaces": false
  },
  "scripts": {
    "vscode:prepublish": "npm run verify && npm run build:prod",
    "build": "npm run build:extension && npm run build:webview",
    "build:prod": "npm run build:extension:prod && npm run build:webview",
    "build:extension": "node esbuild.config.mjs",
    "build:extension:prod": "node esbuild.config.mjs --production",
    "build:webview": "vite build --config webview/vite.config.ts",
    "watch": "node esbuild.config.mjs --watch",
    "dev": "concurrently -n EXT,WEB -c cyan,yellow \"npm run watch\" \"npm run build:webview\"",
    "package": "npx vsce package --no-dependencies --out emote.vsix",
    "clean": "rm -rf dist",
    "mcp-server": "node dist/mcp-server.js",
    "typecheck:extension": "tsc --noEmit",
    "typecheck:webview": "tsc --noEmit -p webview/tsconfig.json",
    "typecheck": "npm run typecheck:extension && npm run typecheck:webview",
    "verify": "npm run typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.85.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.1.2",
    "esbuild": "^0.21.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@vokality/ragdoll": "^0.1.4-a1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}